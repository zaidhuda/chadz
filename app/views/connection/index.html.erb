<style type="text/css">
.guest{
  opacity: .4;
}
.guest:hover{
  opacity: 1;
}
</style>
<%= render 'layouts/leftpart' %>
<div class="page-header">
  <h1>Connections <small>Manage your connections</small></h1>
</div>
<p class='lead'>Listing Users based on latest message.</p>
<div id="messages"><%= render 'data' %></div>
<div class='centered'>
	<% if !current_page?('/') %>
	<%= link_to_next_page @messages, 'Load More', :remote=>true, :id => 'next_page' %>
	<% end %>
</div>
<%= render 'layouts/rightpart' %>