<%= stylesheet_link_tag  "registrations" %>
<div class="container">


	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, :validate => { :presence => true }, :html => { :class => 'form-signin' }) do |f| %>
		<h2>Change your password</h2>
			<%= f.hidden_field :reset_password_token %>
			<%= f.input :password, :label => false, :input_html => { :class => 'input-block-level', :placeholder => 'Password' }  %>
			<%= f.input :password_confirmation, :label => false, :input_html => { :class => 'input-block-level', :placeholder => 'Password Confirmation' }  %>
			<%= f.submit "Change password", :class => "btn btn-primary pull-right btn-block" %>
  <div class="clearfix"></div>
  <br>

		<div class="links">
			<%= render "devise/shared/links" %>
		</div>
		<% end %>

</div> <!-- /container -->